<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">


    <fragment
        android:id="@+id/nav_home"
        android:name="com.colin.android.demo.kotlin.ui.home.HomeFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.colin.android.demo.kotlin.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.colin.android.demo.kotlin.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment" />

    <fragment
        android:id="@+id/nav_method"
        android:name="com.colin.android.demo.kotlin.ui.method.MethodFragment"
        android:label="@string/menu_method"
        tools:layout="@layout/layout_refresh_list">
        <action
            android:id="@+id/action_to_log"
            app:destination="@+id/LogFragment" />
    </fragment>

    <fragment
        android:id="@+id/LogFragment"
        android:name="com.colin.android.demo.kotlin.ui.method.LogFragment"
        android:label="@string/menu_log"
        tools:layout="@layout/layout_refresh_list" />

</navigation>