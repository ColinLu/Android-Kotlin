<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidKotlin" parent="Base.Activity" />

    <style name="Theme.AndroidKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AndroidKotlin.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <!--默认文本框样式-->
    <style name="Theme.AndroidKotlin.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="cardCornerRadius">@dimen/app_radius_default</item>
        <item name="cardElevation">@dimen/app_elevation_default</item>
        <item name="cardMaxElevation">@dimen/app_elevation_default</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/app_background_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.AndroidKotlin.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Button" parent="Text">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.TabDefault" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.TabSelected" parent="Widget.AppCompat.Light.ActionBar.TabText.Inverse">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>